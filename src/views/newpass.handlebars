<div class="container m-5 p-5">
    <div class="row d-flex justify-content-center my-2 text-center">
        <form action="http://localhost:8080/newpass" method="post" class="border col-8 form-color">
            <input type="hidden" id="userLink" name="userLink" value={{msg}}>
            <div class="row d-flex justify-content-center my-2 text-center">
                <h5>Ingresa tu nueva contrase√±a</h5>
            </div>
            {{#if msg2}}
            <div class="row my-5 d-flex justify-content-center">
                <div class="col-md-8">
                    <p class="fw-bolder text-success">{{msg2}}</p>
                </div>
            </div>
            {{/if}}
            <div class="row d-flex justify-content-center my-2">

                <div class="form-floating mb-3 col-md-8">
                    <input type="password" class="form-control" id="userPassword" name="userPassword"
                        placeholder="password" required>
                    <label for="floatingInput">password</label>
                </div>
            </div>
            <div class="row my-4 d-flex justify-content-center">
                <div class="col-md-8">
                    <button class="btn btn-primary" type="submit">Enviar</button>

                </div>
            </div>
        </form>
    </div>
</div>