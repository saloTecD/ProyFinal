<div class="container my-5">
    {{#if logo}}
    <div class="row d-flex justify-content-end">
        <div class="col-2">
            Bienvenido {{logo}} Rol:{{rol}}
        </div>
    </div>
    <div class="row d-flex justify-content-end text-decoration-underline">
        <div class="col-2">
           <a href="{{baseLink}}/logout"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                <path fill-rule="evenodd"
                    d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
            </svg> Cerrar Sesion</a>
        </div>
    </div>
    {{/if}}
    <div class="row">
        {{#each showProducts.products}}
        <div class="col my-3">
            <div class="card" style="width: 18rem;">
                <img src={{this.pid.thumbnails}} class="card-img-top" alt={{this.pid.title}}>
                <div class="card-body">
                    <h5 class="card-title">{{this.pid.title}}</h5>
                    <p class="card-text">{{this.pid.description}}</p>
                    <p class="my-4">Precio x Und: <b>{{this.pid.price}}</b></p>
                    <p class="my-3">Cant: {{this.quantity}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row my-4 justify-content-center">
        <div class="col">
            <a href="{{baseLink}}/carts/usercart/purchase"><button type="button" class="btn btn-info bbtt" id="finCompra">Finalizar Compra</button></a>
        </div>

    </div>
    
</div>